<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="background" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.HistoryController">
   <children>
      <StackPane fx:id="contentPane">
         <children>
            <Pane fx:id="veil" prefHeight="200.0" prefWidth="200.0" />
            <VBox alignment="CENTER" spacing="20.0">
               <children>
                  <Label fx:id="leaderboardHeader" alignment="CENTER" text="Scores">
                     <font>
                        <Font size="36.0" />
                     </font>
                  </Label>
                  <TableView fx:id="table" prefHeight="350.0" prefWidth="200.0" />
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <Button fx:id="back" mnemonicParsing="false" onAction="#showMain" prefWidth="100.0" text="Home" />
                        <Button mnemonicParsing="false" onAction="#showHighScores" prefWidth="100.0" text="High Scores" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets left="30.0" right="30.0" />
               </padding>
            </VBox>
         </children>
      </StackPane>
   </children>
</StackPane>
